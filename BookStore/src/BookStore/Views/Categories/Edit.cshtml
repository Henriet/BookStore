@model int

@{
    ViewData["Title"] = "Edit category";
}

<input id="Id" name="Id" type="hidden" value="@Model" />

<div class="form-horizontal">
    <h4 data-bind="text: Name"></h4>
    <hr />
    <div class="form-group">
        <div class="col-md-10">
            Name: <input id="Name" class="form-control" data-bind="value: Name"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            Creation Date: <p data-bind="text: CreationDate"></p>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update" id="submit" data-bind="click: Update"class="btn btn-default" />
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="~/js/editcategory.js"></script>
